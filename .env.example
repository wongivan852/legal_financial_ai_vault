# Legal AI Vault - Environment Configuration Template
# Copy this file to .env.development or .env.production and fill in the values

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME=Legal AI Vault
VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# ============================================================================
# SECURITY
# ============================================================================
# Generate with: openssl rand -hex 32
JWT_SECRET=your-secret-key-here-change-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your-encryption-key-here-32-bytes-use-openssl-rand-hex-32

# ============================================================================
# DATABASE
# ============================================================================
DB_USER=legalai
DB_PASSWORD=changeme_secure_password_here
DB_HOST=postgres
DB_PORT=5432
DB_NAME=legal_ai_vault
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# ============================================================================
# VECTOR DATABASE (QDRANT)
# ============================================================================
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_API_KEY=

# ============================================================================
# INFERENCE BACKEND CONFIGURATION
# ============================================================================
# Choose: "vllm" for GPU cluster deployment or "ollama" for local deployment
INFERENCE_BACKEND=ollama

# ----------------------------------------------------------------------------
# OLLAMA CONFIGURATION (for local development/deployment)
# ----------------------------------------------------------------------------
# Ollama API base URL
# - For Docker: http://host.docker.internal:11434 (macOS/Windows)
# - For local: http://localhost:11434
OLLAMA_BASE_URL=http://localhost:11434

# Model names (must be pulled with: ollama pull <model>)
OLLAMA_CONTRACT_MODEL=qwen2.5:14b        # Contract review and analysis
OLLAMA_COMPLIANCE_MODEL=qwen2.5:14b      # Compliance checking
OLLAMA_ROUTER_MODEL=qwen2.5:7b           # Document classification (lighter)
OLLAMA_RESEARCH_MODEL=qwen2.5:14b        # Legal research
OLLAMA_EMBEDDING_MODEL=nomic-embed-text  # Text embeddings (768-dim)

# ----------------------------------------------------------------------------
# vLLM CONFIGURATION (for GPU cluster deployment - LEGACY)
# ----------------------------------------------------------------------------
VLLM_CONTRACT_URL=http://vllm-contract:8001/v1
VLLM_COMPLIANCE_URL=http://vllm-compliance:8002/v1
VLLM_ROUTER_URL=http://vllm-router:8003/v1
EMBEDDING_URL=http://embedding-service:8004

# ============================================================================
# FILE STORAGE
# ============================================================================
DOCUMENT_STORAGE_PATH=/app/documents
MAX_UPLOAD_SIZE_MB=100

# ============================================================================
# CORS SETTINGS
# ============================================================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://legal-ai.client.internal,http://localhost:3000

# ============================================================================
# AUDIT LOGGING
# ============================================================================
AUDIT_LOG_PATH=/app/logs/audit.log
AUDIT_LOG_RETENTION_DAYS=2555

# ============================================================================
# INFERENCE SETTINGS
# ============================================================================
DEFAULT_MAX_TOKENS=4096
DEFAULT_TEMPERATURE=0.3
INFERENCE_TIMEOUT_SECONDS=120

# ============================================================================
# REDIS (OPTIONAL - FOR CACHING)
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================================================
# MONITORING
# ============================================================================
GRAFANA_PASSWORD=changeme_grafana_admin_password

# ============================================================================
# DIFY CONFIGURATION
# ============================================================================
DIFY_API_URL=http://dify-api:5001
DIFY_API_KEY=

# ============================================================================
# EMAIL NOTIFICATIONS (OPTIONAL)
# ============================================================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@legal-ai.client.internal
